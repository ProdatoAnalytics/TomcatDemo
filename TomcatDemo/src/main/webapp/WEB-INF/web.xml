<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    id="WebApp_ID" version="3.1">

    <!-- ########################################################################################### -->
    <!-- ############### BEGIN COMMON ############################################################## -->
    <!-- ########################################################################################### -->

    <welcome-file-list>
        <welcome-file>WelcomeServlet</welcome-file>
    </welcome-file-list>

    <servlet>
        <description>Willkommensseite</description>
        <display-name>WelcomeServlet</display-name>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>com.prodato.norma.demo.tomcat.servlet.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/WelcomeServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Zentrales Menu. Wird f체r unterschiedliche Branches 체ber XML-Dateien gepflegt</description>
        <display-name>MenuServlet</display-name>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>com.prodato.norma.demo.tomcat.servlet.MenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    
    <!-- TODO funktionierte nicht im Database-Branch f76425e -->
    <!-- <filter>
        <filter-name>ExceptionHandlingFilter</filter-name>
        <filter-class>com.prodato.norma.demo.tomcat.utils.ExceptionHandlingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ExceptionHandlingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping> -->


    <!-- ########################################################################################### -->
    <!-- ############### END COMMON ################################################################ -->
    <!-- ########################################################################################### -->

    <!-- ########################################################################################### -->
    <!-- ############### BEGIN SERVLET ############################################################# -->
    <!-- ########################################################################################### -->

    <servlet>
        <description>Einfaches Hello World zur Demonstration eines Servlets auf Tomcat</description>
        <display-name>HelloWorldServlet</display-name>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>com.prodato.norma.demo.tomcat.servlet.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/HelloWorldServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Ausgabe aller grundlegenden Parameter, mit denen das Servlet aufgerufen wurde (Servlet, Context etc.)</description>
        <display-name>ShowStatusServlet</display-name>
        <servlet-name>ShowStatusServlet</servlet-name>
        <servlet-class>com.prodato.norma.demo.tomcat.servlet.ShowStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowStatusServlet</servlet-name>
        <url-pattern>/ShowStatusServlet/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Tests f체r den Download einer Bin채rdatei</description>
        <display-name>StreamDownloadServlet</display-name>
        <servlet-name>StreamDownloadServlet</servlet-name>
        <servlet-class>com.prodato.norma.demo.tomcat.servlet.StreamDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StreamDownloadServlet</servlet-name>
        <url-pattern>/StreamDownloadServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>CSV-Datei wird mithilfe eines Filters in eine HTML-Tabelle umgewandelt</description>
        <display-name>CsvFilterServlet</display-name>
        <servlet-name>CsvFilterServlet</servlet-name>
        <servlet-class>com.prodato.norma.demo.tomcat.servlet.CsvFilterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CsvFilterServlet</servlet-name>
        <url-pattern>/subtests/filter/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CsvToTableFilter</filter-name>
        <filter-class>com.prodato.norma.demo.tomcat.servlet.filter.CsvToTableFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LatexFilter</filter-name>
        <filter-class>com.prodato.norma.demo.tomcat.servlet.filter.LatexFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CsvToTableFilter</filter-name>
        <url-pattern>*.csv</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LatexFilter</filter-name>
        <url-pattern>/subtests/filter/*</url-pattern>
    </filter-mapping>

    <servlet>
        <description>Weiterleitung zu einer Fehlerseite im Fehlerfall</description>
        <display-name>RedirectionServlet</display-name>
        <servlet-name>RedirectionServlet</servlet-name>
        <servlet-class>com.prodato.norma.demo.tomcat.servlet.RedirectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RedirectionServlet</servlet-name>
        <url-pattern>/RedirectionServlet</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>RedirectionFilter</filter-name>
        <filter-class>com.prodato.norma.demo.tomcat.servlet.filter.RedirectionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RedirectionFilter</filter-name>
        <url-pattern>/RedirectionServlet</url-pattern>
    </filter-mapping>
    
    <listener>
        <listener-class>com.prodato.norma.demo.tomcat.servlet.listener.ContextStartupShutdownLoggingListener</listener-class>
    </listener>

    <!-- ########################################################################################### -->
    <!-- ############### END SERVLET ############################################################### -->
    <!-- ########################################################################################### -->

</web-app>
